				{
					"name": "Envoyer Demande",
					"request": {
						"method": "POST",
						"header": [],
						"body": {
							"mode": "formdata",
							"formdata": [
								{
									"key": "typeAutorisation",
									"value": "AUTORISATION_OUVERTURE",
									"type": "text",
									"description": "Type d'autorisation"
								},
								{
									"key": "cinDemandeur",
									"value": "AB123456",
									"type": "text",
									"description": "CIN du demandeur"
								},
								{
									"key": "latitude",
									"value": "33.5731",
									"type": "text",
									"description": "Latitude"
								},
								{
									"key": "longitude",
									"value": "-7.5898",
									"type": "text",
									"description": "Longitude"
								},
								{
									"key": "files",
									"type": "file",
									"src": [],
									"description": "Fichiers à joindre (optionnel)"
								}
							]
						},
						"url": {
							"raw": "{{baseUrl}}/demande/envoyerDemande",
							"host": ["{{baseUrl}}"],
							"path": ["demande", "envoyerDemande"]
						},
						"description": "Créer une nouvelle demande (public, pas besoin d'authentification)"
					}
				},
				{
					"name": "Track Demande",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/demande/track?idDemande=DEMANDE_ID&cinDemandeur=AB123456",
							"host": ["{{baseUrl}}"],
							"path": ["demande", "track"],
							"query": [
								{
									"key": "idDemande",
									"value": "DEMANDE_ID",
									"description": "ID de la demande"
								},
								{
									"key": "cinDemandeur",
									"value": "AB123456",
									"description": "CIN du demandeur"
								}
							]
						},
						"description": "Suivre l'état d'une demande (public, pas besoin d'authentification)"
					}
				},
				{
					"name": "Télécharger Document",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/demande/telecharger/DOCUMENT_ID?cin=AB123456&demandeId=DEMANDE_ID",
							"host": ["{{baseUrl}}"],
							"path": ["demande", "telecharger", "DOCUMENT_ID"],
							"query": [
								{
									"key": "cin",
									"value": "AB123456",
									"description": "CIN du demandeur"
								},
								{
									"key": "demandeId",
									"value": "DEMANDE_ID",
									"description": "ID de la demande"
								}
							]
						},
						"description": "Télécharger un document associé à une demande (public, pas besoin d'authentification)"
					}
				}
			]
		},
